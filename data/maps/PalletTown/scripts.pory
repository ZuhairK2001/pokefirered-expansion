mapscripts MyMapscripts_PalletTown { }

script Fisher_PalletTown {
    lock
    faceplayer
    
    if (!flag(FLAG_SYS_POKEMON_GET)) {
        msgbox("Ah... It's a beautiful day\nfor fishing!", MSGBOX_DEFAULT)
        release
        end
    }
    
    if (flag(FLAG_FISHER_PALLET_MYSTIC_WATER)) {
        msgbox("Take good care of that\nMYSTIC WATER, kid.\pIt's a real treasure for\nWATER-type POKéMON.", MSGBOX_DEFAULT)
        release
        end
    }
    
    switch (var(VAR_STARTER_MON)) {
        case 0:
            msgbox("Whoa, you picked BULBASAUR?\pGRASS-types near water make\nme nervous...", MSGBOX_DEFAULT)
            goto(Fisher_End)
        case 1:
            goto(Fisher_GiveWater)
        case 2:
            msgbox("CHARMANDER, huh?\pHeh, I could douse that flame\nwith one good splash!", MSGBOX_DEFAULT)
            goto(Fisher_End)
        default:
            msgbox("Ah... It's a beautiful day\nfor fishing!", MSGBOX_DEFAULT)
            goto(Fisher_End)
    }
}

script Fisher_GiveWater {
    msgbox("Ahh, you chose SQUIRTLE!\pNow that's a partner for\nthe sea!", MSGBOX_DEFAULT)
    giveitem(ITEM_MYSTIC_WATER, 1)
    compare(VAR_RESULT, 0)
    goto_if_eq(Fisher_BagFull)
    msgbox("Here, take this MYSTIC WATER.\pIt'll power up your SQUIRTLE's\nWATER-type moves!", MSGBOX_DEFAULT)
    setflag(FLAG_FISHER_PALLET_MYSTIC_WATER)
    release
    end
}

script Fisher_BagFull {
    msgbox("Your BAG is full!", MSGBOX_DEFAULT)
    release
    end
}

script Fisher_End {
    release
    end
}


script Trainer_Adam {
    lock
    faceplayer
    
    if (!flag(FLAG_SYS_POKEMON_GET)) {
        msgbox("Hi {PLAYER}! My Grandpa tells me\nyou know a lot about Pokémon!", MSGBOX_DEFAULT)
        release
        end
    }
    
    // Use custom flag instead of checktrainerflag
    if (flag(FLAG_BEAT_ADAM)) {
        msgbox("We already battled, {PLAYER}!\pKeep training, I'll be ready for a rematch someday.", MSGBOX_DEFAULT)
        release
        end
    }
    
    msgbox("Oh, I see you've got your first\nPokémon!\pHow about we have a quick battle?", MSGBOX_DEFAULT)
    trainerbattle_single(TRAINER_ADAM, Adam_IntroText, Adam_DefeatText, Trainer_Adam_PostBattle)
    release
    end
}

script Trainer_Adam_PostBattle {
    setflag(FLAG_BEAT_ADAM)
    msgbox("That was a great match!\nYou've got potential, {PLAYER}!", MSGBOX_DEFAULT)
    release
    end
}

