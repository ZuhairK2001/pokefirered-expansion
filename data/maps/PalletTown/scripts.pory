//MEW CUTSCENE


script PalletTown_MewCutscene {
    lockall
    
    // Check if this is the first time leaving the house
     if (flag(FLAG_MEW_CUTSCENE_DONE)) {
        goto(SkipMewCutscene)
    }
    
    // Spawn Mew
    addobject(LOCALID_MEW)
    
    // Mew notices player
    playse(SE_PIN)
    applymovement(LOCALID_MEW, Movement_Mew_Exclaim)
    waitmovement(0)
    delay(20)
    
    // Mew circles around player
    applymovement(LOCALID_MEW, Movement_Mew_CirclePlayer)
    waitmovement(0)
    delay(15)
    
    // Mew jumps excitedly
    applymovement(LOCALID_MEW, Movement_Mew_Jump)
    waitmovement(0)
    
    playmoncry(SPECIES_MEW, CRY_MODE_NORMAL)
    waitmoncry
    delay(20)
    
    // Player reacts
    msgbox("Huh? That POKéMON...\pIt seems like it was looking for\nsomething... or someone?\pAnd it looks so happy!", MSGBOX_SIGN)
    closemessage
    delay(30)
    
    // Mew disappears
	playmoncry(SPECIES_MEW, CRY_MODE_NORMAL)
    applymovement(LOCALID_MEW, Movement_Mew_Disappear)
    waitmovement(0)
    waitmoncry
    delay(20)
    removeobject(LOCALID_MEW)
    
    msgbox("It... disappeared!\pWhat was that POKéMON?!", MSGBOX_SIGN)
    
    setflag(FLAG_MEW_CUTSCENE_DONE)
    
SkipMewCutscene:
    releaseall
    end
}

movement Movement_Mew_Exclaim {
    emote_exclamation_mark
    delay_16
    delay_16
    face_player
    step_end
}

movement Movement_Mew_CirclePlayer {
    walk_left
    walk_left
    walk_down
    walk_left
	face_player
    walk_left
    walk_up
	face_player
    walk_down
    walk_right
    face_player
    step_end
}

movement Movement_Mew_Jump {
    jump_in_place_up
    delay_16
    jump_in_place_up
    delay_16
    step_end
}

movement Movement_Mew_Disappear {
    jump_special_up
    jump_special_up
    step_end
}
